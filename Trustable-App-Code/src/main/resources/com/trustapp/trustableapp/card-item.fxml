<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="160.0" prefWidth="215.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trustapp.trustableapp.Controller.NationCardController">
   <children>
      <VBox fx:id="vItemBox" alignment="CENTER" onMouseClicked="#nationSelection" prefHeight="160.0" prefWidth="215.0" stylesheets="@css/style.css">
         <children>
            <Label fx:id="countryNameLabel" alignment="CENTER" prefHeight="35.0" prefWidth="225.0" text="European Union" textFill="WHITE">
               <font>
                  <Font name="SansSerif Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="countryCodeLabel" alignment="CENTER" prefHeight="21.0" prefWidth="110.0" text="EU" textFill="WHITE">
               <font>
                  <Font name="SansSerif Regular" size="15.0" />
               </font>
            </Label>
            <ImageView fx:id="imgView" fitHeight="70.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ImageView>
         </children>
         <styleClass>
            <String fx:value="shadow" />
            <String fx:value="grayish-box" />
            <String fx:value="small-radius-box" />
         </styleClass>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </VBox>
   </children>
</AnchorPane>
